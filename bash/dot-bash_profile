# Load profile (sets PATH and environment variables)
if [ -r "$HOME/.profile" ]; then
    . "$HOME/.profile"
fi

# Load bashrc for interactive shells
if [[ $- == *i* ]] && [ -r "$HOME/.bashrc" ]; then
    . "$HOME/.bashrc"
fi

# iTerm2 shell integration
if [ -r "$HOME/.iterm2_shell_integration.bash" ]; then
    . "$HOME/.iterm2_shell_integration.bash"
fi
